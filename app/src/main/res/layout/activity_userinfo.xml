<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    android:id="@+id/mainLayout"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorPrimary"
            >

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="12dp"
                android:clickable="true"
                android:src="@drawable/icon_fanhui_w" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="个人信息"
                android:textColor="@color/white"
                android:textSize="@dimen/text_dimens_18" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_toright1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="15dp"
                android:src="@drawable/xiangyoujiantou" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="头像"
                android:textColor="#333333"
                android:textSize="@dimen/text_dimens_16" />

            <com.zyx.baby.widget.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/img_mm"
                app:border_color="@color/white"
                app:border_width="2dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_toright1"
                android:layout_marginEnd="15dp" />
        </RelativeLayout>

        <View style="@style/line_thin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_nick"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/select_bg"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="昵称"
                    android:textColor="#333333"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_toright2"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_dimens_16" />


                <ImageView
                    android:id="@+id/iv_toright2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:src="@drawable/xiangyoujiantou" />
            </RelativeLayout>


            <View style="@style/line_thin" />

            <RelativeLayout
                android:id="@+id/rl_sex"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/select_bg"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="性别"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_dimens_16" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_toright4"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_dimens_16" />

                <ImageView
                    android:id="@+id/iv_toright4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:src="@drawable/xiangyoujiantou" />
            </RelativeLayout>

            <View style="@style/line_thin" />



            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/select_bg"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="手机号"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_dimens_16" />
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_toright3"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_dimens_16" />

                <ImageView
                    android:id="@+id/iv_toright3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/xiangyoujiantou" />

            </RelativeLayout>
            <View style="@style/line_thin" />

            <View style="@style/line_thin"
                android:layout_marginTop="50dp"/>
            <RelativeLayout
                android:gravity="center_horizontal"
                android:id="@+id/rl_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/select_bg"
                android:clickable="true">


                <TextView
                    android:id="@+id/tv_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:textColor="#ea4949"
                    android:textSize="16sp" />

            </RelativeLayout>

            <View style="@style/line_thin" />

        </LinearLayout>

</LinearLayout>
