<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/mainLayout"
    >
    <include layout="@layout/layout_title"></include>

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/ripple_bg"
            >
            <com.zyx.baby.widget.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_mm"
                app:border_color="@color/white"
                app:border_width="2dp" />

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/ll_logined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_head"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/iv_head"
                android:layout_toRightOf="@+id/iv_head"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="妮妈妈"
                    android:textColor="@color/text_nomal"
                    android:textSize="@dimen/text_dimens_16"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_qianming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="愿宝宝开开心心，快快乐乐成长！"
                        android:textColor="@color/text_gray1"
                        android:textSize="@dimen/text_dimens_12" />

                </LinearLayout>

            </LinearLayout>

                <TextView
                    android:id="@+id/tv_login"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_head"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/iv_head"
                    android:layout_toRightOf="@+id/iv_head"
                    android:text="登录/注册"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dimens_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="15dp"
                android:src="@drawable/xiangyoujiantou" />

        </RelativeLayout>


        <View style="@style/line_thin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/main_bg"></View>

        <View style="@style/line_thin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_xiaoxi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_xiaoxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:clickable="true"
                    android:src="@drawable/icon_xiaoxi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_xiaoxi"
                    android:text="消息"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_dimens_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="15dp"
                    android:src="@drawable/xiangyoujiantou" />
            </RelativeLayout>


            <View style="@style/line_thin" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/main_bg"></View>

            <View style="@style/line_thin" />

            <RelativeLayout
                android:id="@+id/ll_chengjiu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
               android:background="@drawable/ripple_bg"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_chengjiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/icon_chengjiu" />

                <TextView
                    android:id="@+id/tv_chengjiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_chengjiu"
                    android:text="我的成就"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_dimens_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/xiangyoujiantou" />

                <View
                    style="@style/line_thin"
                    android:layout_alignLeft="@+id/tv_chengjiu"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/tv_chengjiu"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_guanzhu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
               android:background="@drawable/ripple_bg"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/icon_guanzhu" />

                <TextView
                    android:id="@+id/tv_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_guanzhu"
                    android:text="我的关注"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_dimens_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/xiangyoujiantou" />

                <View
                    style="@style/line_thin"
                    android:layout_alignLeft="@+id/tv_guanzhu"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/tv_guanzhu"></View>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_shoucang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
               android:background="@drawable/ripple_bg"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_shoucang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/icon_shoucang" />

                <TextView
                    android:id="@+id/tv_shoucang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_shoucang"
                    android:text="我的收藏"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_dimens_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/xiangyoujiantou" />

                <View
                    style="@style/line_thin"
                    android:layout_alignLeft="@+id/tv_shoucang"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/tv_shoucang"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_caogao"
                android:layout_width="match_parent"
                android:layout_height="50dp"
               android:background="@drawable/ripple_bg"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_caogao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/icon_caogao" />

                <TextView
                    android:id="@+id/tv_caogao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_caogao"
                    android:text="我的草稿"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_dimens_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/xiangyoujiantou" />

                <View
                    style="@style/line_thin"
                    android:layout_alignLeft="@+id/tv_caogao"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/tv_caogao"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_shezhi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_shezhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/icon_shezhi" />

                <TextView
                    android:id="@+id/tv_shezhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/iv_shezhi"
                    android:text="设置"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_dimens_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/xiangyoujiantou" />

            </RelativeLayout>
            <View style="@style/line_thin" />

          </LinearLayout>

</LinearLayout>
