<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/custom_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:src="@drawable/logo"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/custom_icon"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_custom_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:text="title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_custom_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="16.49"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_custom_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            android:textColor="@color/text_gray"
            android:text="content"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:layout_below="@+id/ll_content"
        android:id="@+id/tv_custom_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="#000000"
        android:text="20åº¦"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        />

    <TextView
        android:layout_toRightOf="@+id/tv_custom_temp"
        android:layout_alignTop="@+id/tv_custom_temp"
        android:id="@+id/tv_custom_dum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="15%"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>

</RelativeLayout>