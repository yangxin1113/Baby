<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!--自定义半圆形加载进度条-->
    <declare-styleable name="HalfProgressBar1">
        <attr name="roundColor1" format="color"/>
        <attr name="roundProgressColor1" format="color"/>
        <attr name="circularDotColor1" format="color"/>
    </declare-styleable>

    <declare-styleable name="TasksCompletedView">
        <attr name="radius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="circleColor" format="color"/>
        <attr name="ringColor" format="color"/>
    </declare-styleable>

    <!-- 参考Seekbar -->
    <declare-styleable name="windows">

        <!-- 背景颜色 -->
        <attr name="background1" format="color" />
        <!-- 进度颜色 -->
        <attr name="progressDrawable" format="color" />
        <!-- 宽度 -->
        <attr name="layout_width" format="dimension" />
        <!-- 字体颜色 -->
        <attr name="textColor" format="color" />
        <!-- 字体大小 -->
        <attr name="textSize" format="dimension" />
        <!-- 最大进度 -->
        <attr name="max" format="integer" />
        <!-- 进度 -->
        <attr name="progress" format="integer" />
        <!-- 进度点 -->
        <attr name="thumb" format="reference" />
        <!-- 进度点宽高 -->
        <attr name="thumbSize" format="integer" />

        <attr name="texttext" format="string"/>
    </declare-styleable>


    <!-- 圆角弧度 -->
    <attr name="border_radius" format="dimension"/>
    <!-- 圆角类型 -->
    <attr name="type" >
        <enum name="circle" value="0"/>
        <enum name="round" value="1"/>
    </attr>
    <!-- imageView 属性 -->
    <declare-styleable name="RoundImageView">
        <attr name="border_radius"/>
        <attr name="type"/>
    </declare-styleable>
</resources>
